<?xml version="1.0" encoding="utf-8"?>
<com.enovlab.yoop.ui.widget.InsetsNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/colorPrimary">

        <include
            android:id="@+id/app_bar"
            layout="@layout/layout_ticket_transfer_app_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/transfer_contacts_search_box"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rect_alpha_white"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_search_white_24dp"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/transfer_contacts_input"
                style="@style/Text.Medium.Medium.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:inputType="text"
                android:imeOptions="actionDone"
                tools:text="Aaron White" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/transfer_contacts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:clipToPadding="false"
            android:paddingBottom="68dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transfer_contacts_search_box"
            tools:listitem="@layout/item_ticket_details_contact" />

        <Button
            android:id="@+id/transfer_contacts_manual"
            style="@style/Button.White"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/ticket_transfer_contacts_enter_email_manually"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.Group
            android:id="@+id/group_transfer_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="transfer_contacts_search_box,transfer_contacts,transfer_contacts_manual" />

        <com.enovlab.yoop.ui.widget.InputView
            android:id="@+id/transfer_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:hint="@string/ticket_transfer_email_hint"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            tools:layout_height="56dp" />

        <com.enovlab.yoop.ui.widget.StatefulFloatingActionButton
            android:id="@+id/transfer_email_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transfer_email_input"
            app:layout_constraintVertical_bias="1.0"
            app:sfab_state="disabled_full" />

        <Button
            android:id="@+id/transfer_email_contacts"
            style="@style/Button.White"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:text="@string/ticket_transfer_email_show_contacts"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/transfer_email_proceed"
            app:layout_constraintEnd_toStartOf="@+id/transfer_email_proceed"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/transfer_email_proceed" />

        <android.support.constraint.Group
            android:id="@+id/group_transfer_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:constraint_referenced_ids="transfer_email_input,transfer_email_proceed,transfer_email_contacts" />

        <ImageView
            android:id="@+id/transfer_confirm_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_ticket_transfer"
            app:layout_constraintBottom_toTopOf="@+id/transfer_confirm_headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/transfer_confirm_headline"
            style="@style/Text.Bold.Headline.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/transfer_confirm_caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transfer_confirm_icon"
            tools:text="This ticket will be sent to amyclark@gmail.com." />

        <TextView
            android:id="@+id/transfer_confirm_caption"
            style="@style/Text.Medium.Large.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/ticket_details_drawer_confirm_caption"
            app:layout_constraintBottom_toTopOf="@+id/transfer_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transfer_confirm_headline" />

        <com.enovlab.yoop.ui.widget.StatefulButton
            android:id="@+id/transfer_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/ticket_details_transfer_ticket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.Group
            android:id="@+id/group_transfer_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="transfer_confirm_headline,transfer_confirm_caption,transfer_confirm,transfer_confirm_icon" />

    </android.support.constraint.ConstraintLayout>

</com.enovlab.yoop.ui.widget.InsetsNestedScrollView>