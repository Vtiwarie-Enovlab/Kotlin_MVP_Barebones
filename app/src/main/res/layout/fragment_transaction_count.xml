<?xml version="1.0" encoding="utf-8"?>
<com.enovlab.yoop.ui.widget.InsetsNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:background="?android:attr/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <include
            android:id="@+id/app_bar"
            layout="@layout/layout_transaction_count_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/transaction_summary"
            layout="@layout/layout_transaction_count_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />

        <TextView
            android:id="@+id/transaction_count_headline"
            style="@style/Text.Bold.Headline.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:text="@string/transaction_count_headline"
            app:layout_constraintBottom_toTopOf="@+id/transaction_count_limits"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_summary"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/transaction_count_limits"
            style="@style/Text.Medium.Medium.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="52dp"
            android:visibility="gone"
            android:textColor="@color/color_white_alpha_70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_count_headline"
            app:layout_constraintBottom_toTopOf="@+id/count_picker"
            tools:text="Youâ€™ve already requested 2 of your 4 available tickets for this event."
            tools:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/count_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:clipToPadding="false"
            android:paddingEnd="@dimen/padding_default"
            android:paddingStart="@dimen/padding_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_count_limits"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/transaction_count_headline_input"
            style="@style/Text.Bold.Headline.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:text="@string/transaction_count_headline_input"
            app:layout_constraintBottom_toTopOf="@+id/chances_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_summary"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="gone"
            tools:visibility="gone"/>

        <com.enovlab.yoop.ui.widget.ChancesInputView
            android:id="@+id/chances_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_count_headline_input"
            android:visibility="gone"
            tools:visibility="gone"/>

        <com.enovlab.yoop.ui.widget.StatefulFloatingActionButton
            android:id="@+id/proceed_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:sfab_state="disabled"
            tools:visibility="visible" />

        <Button
            android:id="@+id/tickets_selected"
            style="@style/Button.White"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/proceed_review"
            app:layout_constraintEnd_toStartOf="@+id/proceed_review"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/proceed_review"
            tools:text="4 Tickets"
            tools:visibility="visible" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="66dp" />

    </android.support.constraint.ConstraintLayout>

</com.enovlab.yoop.ui.widget.InsetsNestedScrollView>