<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="?android:attr/colorPrimary"
    android:animateLayoutChanges="true">

    <include
        android:id="@+id/app_bar"
        layout="@layout/layout_transaction_details_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/container_transaction_seat_map"
        android:layout_width="0dp"
        android:layout_height="@dimen/seat_map_default_height"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/transaction_seat_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="84dp" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/container_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/container_transaction_seat_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.enovlab.yoop.ui.widget.LoopImageView
            android:id="@+id/picture_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100dp"
            android:transitionName="@string/transition_name_profile_picture" />

        <com.enovlab.yoop.ui.widget.LoopImageView
            android:id="@+id/picture_performer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:transitionName="@string/transition_name_performer_picture" />

        <View
            android:id="@+id/loop_line"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_alignBottom="@id/picture_performer"
            android:background="?android:attr/colorAccent"
            android:transitionName="@string/transition_name_loop_line" />

        <TextView
            android:id="@+id/price_type"
            style="@style/Text.Medium.Caption.White"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/picture_performer"
            android:layout_alignEnd="@id/picture_performer"
            android:layout_alignStart="@id/picture_performer"
            android:background="@drawable/background_button_accent"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            tools:text="List Price" />

        <Button
            android:id="@+id/price_sort"
            style="@style/Button.Accent.Small"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignBottom="@id/picture_performer"
            android:layout_marginStart="@dimen/margin_default"
            android:background="@drawable/background_button_accent"
            android:drawableStart="@drawable/ic_filter_white_42dp"
            android:elevation="4dp"
            android:paddingEnd="@dimen/padding_default"
            android:paddingStart="4dp"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            tools:ignore="RelativeOverlap"
            tools:text="Sorted by Price"
            tools:visibility="visible" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/offer_group_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/container_pictures"
        android:clipToPadding="false"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_pictures"
        tools:listitem="@layout/item_transaction_details_offer_group" />

</android.support.constraint.ConstraintLayout>