<?xml version="1.0" encoding="utf-8"?>
<com.enovlab.yoop.ui.widget.InsetsNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:background="?android:attr/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_transaction_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <include
            android:id="@+id/app_bar"
            layout="@layout/layout_transaction_edit_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/transaction_summary"
            layout="@layout/layout_transaction_count_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />

        <TextView
            android:id="@+id/transaction_count_headline"
            style="@style/Text.Bold.Headline.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_summary"
            app:layout_constraintVertical_bias="0.15"
            tools:text="@string/transaction_count_headline" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/count_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:clipToPadding="false"
            android:paddingEnd="@dimen/padding_default"
            android:paddingStart="@dimen/padding_default"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_count_headline"
            tools:visibility="gone" />

        <com.enovlab.yoop.ui.widget.ChancesInputView
            android:id="@+id/chances_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_count_headline"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/tickets_selected"
            style="@style/Button.White"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="53dp"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chances_input"
            tools:text="4 Tickets"
            tools:visibility="visible" />

        <Button
            android:id="@+id/save_changes"
            style="@style/Button.Accent"
            android:layout_width="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="@dimen/margin_super_large"
            android:text="@string/transaction_edit_save_changes"
            android:visibility="gone"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chances_input"
            app:layout_constraintVertical_bias="1.0"
            tools:visibility="visible" />

        <Button
            android:id="@+id/delete_offer"
            style="@style/Button.Removable"
            android:layout_width="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/transaction_edit_delete_offer"
            android:drawableStart="@drawable/ic_delete_white_24dp"
            android:drawablePadding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/save_changes"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</com.enovlab.yoop.ui.widget.InsetsNestedScrollView>