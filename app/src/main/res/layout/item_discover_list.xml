<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="@dimen/padding_default"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:foreground="@color/color_black_alpha_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/pill_new"
            style="@style/Text.Bold.Medium.White"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="12dp"
            android:text="@string/discover_pill_new"
            android:background="@drawable/background_discover_pill_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="gone"/>

        <LinearLayout
            android:id="@+id/pill_normal"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/background_discover_pill_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/pill_normal_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                tools:src="@drawable/ic_onsale_black"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/pill_normal_price"
                style="@style/Text.Bold.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                tools:text="$10+" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pill_active"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:background="@drawable/background_discover_pill_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pill_active_user_picture"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:layout_marginStart="@dimen/margin_extra_small"
                android:src="@drawable/ic_account_dark"
                app:civ_border_width="2dp"/>

            <ImageView
                android:id="@+id/pill_active_transaction_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_list_black"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/pill_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            tools:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pill_going_user_picture"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:elevation="2dp"
                android:src="@drawable/ic_account_dark"
                app:civ_border_color="@color/color_white"
                app:civ_border_width="2dp"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Text.Bold.Medium"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="34dp"
                android:text="@string/discover_pill_going"
                android:gravity="center"
                android:background="@drawable/background_discover_pill_white"
                android:elevation="0dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            style="@style/Text.Medium.Header.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="20dp"
            android:textAllCaps="true"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="BRUNO MARS" />

        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="20dp"
            style="@style/Text.Bold.Medium.White"
            android:singleLine="true"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Tue, 2/13 â€¢ Madison Square Garden" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>