<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/background_event_landing_transaction"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:background="?android:attr/colorPrimary">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_add_white_24dp"
        tools:ignore="ContentDescription"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/transaction_another_request"
        style="@style/Text.Bold.Large.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Make another request" />

</LinearLayout>