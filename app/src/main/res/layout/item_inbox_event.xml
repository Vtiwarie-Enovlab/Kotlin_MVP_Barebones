<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:show_mode="pull_out">

    <include
        layout="@layout/layout_inbox_archive"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="end"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_inbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_rounded_primary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/inbox_performer_picture"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:civ_border_color="@color/color_text_transactions"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_account_loop" />

        <TextView
            android:id="@+id/inbox_event_name"
            style="@style/Text.Bold.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/color_white_alpha_70"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/inbox_performer_picture"
            app:layout_constraintEnd_toStartOf="@+id/inbox_event_date"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/inbox_performer_picture"
            app:layout_constraintTop_toTopOf="@+id/inbox_performer_picture"
            tools:text="FLORENCE + THE MACHINE" />

        <TextView
            android:id="@+id/inbox_event_date"
            style="@style/Text.Bold.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textColor="@color/color_white_alpha_70"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/inbox_performer_picture"
            app:layout_constraintEnd_toStartOf="@+id/inbox_more"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/inbox_event_name"
            app:layout_constraintTop_toTopOf="@+id/inbox_performer_picture"
            tools:text=", 5/12" />

        <TextView
            android:id="@+id/inbox_more"
            style="@style/Text.Medium.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_extra_small"
            android:textColor="@color/color_white_alpha_70"
            android:textSize="13sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/inbox_performer_picture"
            app:layout_constraintEnd_toStartOf="@+id/inbox_unread_notifications"
            app:layout_constraintTop_toTopOf="@+id/inbox_performer_picture"
            tools:text="More"
            tools:visibility="visible" />

        <View
            android:id="@+id/inbox_unread_notifications"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/oval_negligible"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/inbox_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/inbox_more"
            tools:visibility="visible" />

        <View
            android:id="@+id/inbox_header_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/color_white_alpha_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inbox_performer_picture" />

        <include
            android:id="@+id/inbox_latest_notification"
            layout="@layout/item_inbox_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/inbox_notifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inbox_header_separator"
            app:layout_constraintVertical_chainStyle="packed" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/inbox_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inbox_latest_notification"
            tools:listitem="@layout/item_inbox_notification"
            tools:visibility="visible" />

    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>