<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/container_manage_payment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/background_manage_payments_grey"
    android:padding="@dimen/padding_large">

    <ImageView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_icon_plus_white"
        app:layout_constraintBottom_toTopOf="@+id/add_new_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/add_new_card"
        style="@style/Text.Bold.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/payments_add_new_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/visa_medium"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/ic_visa_large"
        app:layout_constraintEnd_toStartOf="@+id/mastercard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_new_card"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/mastercard_medium"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/ic_mastercard_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/visa_medium"
        app:layout_constraintTop_toBottomOf="@+id/add_new_card"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>