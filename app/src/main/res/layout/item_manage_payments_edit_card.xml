<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/container_manage_payment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/background_manage_payments_white"
    android:padding="@dimen/padding_large">

    <ImageView
        android:id="@+id/card_logo"
        android:layout_width="114dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_mastercard_large"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/card_number"
        style="@style/Text.Bold.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="**** 1234 | "
        tools:visibility="visible" />

    <TextView
        android:id="@+id/card_expiry"
        style="@style/Text.Bold.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_number"
        tools:text="01/01"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/default_card"
        style="@style/Text.Bold.Medium.Accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/payments_default"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>