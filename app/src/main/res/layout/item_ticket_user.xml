<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/ticket_detail_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/color_white_alpha_15"
        app:cardCornerRadius="@dimen/padding_default"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_margin="@dimen/margin_large">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/ticket_create_id">

            <View
                android:id="@+id/ticket_page_background"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:background="@drawable/oval_ticket_item"
                app:layout_constraintBottom_toTopOf="@+id/guideline10"
                app:layout_constraintEnd_toStartOf="@+id/guideline9" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="73dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="73dp" />

            <TextView
                android:id="@+id/ticket_page"
                style="@style/Text.Bold.Headline.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/color_white_alpha_30"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ticket_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/color_white"
                app:civ_border_width="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_account_loop" />

            <ImageView
                android:id="@+id/ticket_image_verified"
                android:layout_width="34dp"
                android:layout_height="42dp"
                android:layout_marginStart="72dp"
                android:src="@drawable/ic_verified"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/ticket_image"
                app:layout_constraintTop_toTopOf="@+id/ticket_image"
                tools:ignore="ContentDescription"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/ticket_username"
                style="@style/Text.Bold.Headline.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticket_image"
                tools:text="Jonathan Thomas" />

            <TextView
                android:id="@+id/ticket_section"
                style="@style/Text.Medium.Large.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticket_username"
                tools:text="General Admission" />

            <RelativeLayout
                android:id="@+id/ticket_status_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/ticket_status_ready"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticket_section"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintVertical_chainStyle="packed"
                tools:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ticket_status_transfer_state"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/oval_success"
                    android:padding="3dp"
                    android:src="@drawable/ic_check_white_24dp" />

                <TextView
                    android:id="@+id/ticket_status_transfer_title"
                    style="@style/Text.Bold.Large.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/ticket_status_transfer_state"
                    android:text="@string/ticket_details_status_transfer_accepted"
                    android:textColor="@color/color_white_alpha_50" />

                <TextView
                    android:id="@+id/ticket_status_transfer_caption"
                    style="@style/Text.Medium.Caption.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_status_transfer_title"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/ticket_status_transfer_state"
                    android:textColor="@color/color_white_alpha_50"
                    android:textSize="13sp"
                    tools:text="Jonathan transferred to you" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ticket_status_ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toTopOf="@+id/ticket_status_verified"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticket_status_transfer">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ticket_status_ready_state"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@android:color/transparent"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/ticket_status_ready_title"
                    style="@style/Text.Bold.Large.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/ticket_status_ready_state"
                    android:text="@string/ticket_details_status_event_ready" />

                <TextView
                    android:id="@+id/ticket_status_ready_caption"
                    style="@style/Text.Medium.Caption.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_status_ready_title"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/ticket_status_ready_state"
                    android:text="@string/ticket_details_status_ready_caption"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ticket_status_verified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticket_status_ready">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ticket_status_verified_state"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@android:color/transparent"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/ticket_status_verified_title"
                    style="@style/Text.Bold.Large.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/ticket_status_verified_state"
                    android:text="@string/ticket_details_status_verified_user" />

                <TextView
                    android:id="@+id/ticket_status_verified_caption"
                    style="@style/Text.Medium.Caption.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_status_verified_title"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/ticket_status_verified_state"
                    android:text="@string/ticket_details_status_verified_caption"
                    android:textSize="13sp" />

            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_marginStart="@dimen/margin_large"
        tools:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/ticket_detail_main">

        <Button
            android:id="@+id/ticket_create_id"
            style="@style/Button.Accent"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/ticket_details_create_yoop_id"
            android:visibility="invisible"
            tools:visibility="gone" />

        <com.enovlab.yoop.ui.widget.BluetoothView
            android:id="@+id/ticket_bluetooth_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:background="@drawable/background_bluetooth_off"
            android:text="@string/ticket_details_create_yoop_id"
            android:visibility="visible"
            tools:visibility="visible" />

    </FrameLayout>

