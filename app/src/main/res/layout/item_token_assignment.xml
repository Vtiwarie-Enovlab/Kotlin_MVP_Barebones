<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:background="@drawable/background_item_token_assignment"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/token_section_name"
        style="@style/Text.Bold.Large.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintBottom_toTopOf="@+id/token_status"
        app:layout_constraintEnd_toStartOf="@+id/container_token_picture"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="General Admission" />

    <TextView
        android:id="@+id/token_status"
        style="@style/Text.Bold.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/container_token_picture"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/token_section_name"
        tools:text="Invited amy@gmail.com..."
        tools:textColor="@color/color_on_sale_chance_poor" />

    <FrameLayout
        android:id="@+id/container_token_picture"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/token_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:civ_border_width="3dp"
            android:layout_gravity="center"
            tools:src="@drawable/ic_account_loop" />

        <TextView
            android:id="@+id/token_event_ready"
            style="@style/Text.Bold.Caption.White"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/rect_rounded_accent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/event_landing_token_bring_id"
            android:textAllCaps="true"
            android:layout_gravity="bottom"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/token_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_verified"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>