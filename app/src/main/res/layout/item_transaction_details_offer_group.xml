<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_transaction_details_offer_group"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="20dp"
    android:paddingEnd="@dimen/padding_small"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    tools:background="?android:attr/colorPrimary">

    <TextView
        android:id="@+id/offer_group_user_tickets"
        style="@style/Text.Bold.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rect_rounded_white"
        android:paddingBottom="4dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/offer_group_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/offer_group_admission"
        tools:text="You have 2 tickets" />

    <TextView
        android:id="@+id/offer_group_admission"
        style="@style/Text.Bold.Large.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default"
        app:layout_constraintBottom_toTopOf="@+id/offer_group_offer_title"
        app:layout_constraintEnd_toStartOf="@+id/offer_group_price"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offer_group_user_tickets"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="General Admission" />

    <TextView
        android:id="@+id/offer_group_offer_title"
        style="@style/Text.Medium.Medium.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_transactions"
        app:layout_constraintBottom_toTopOf="@+id/offer_group_demand"
        app:layout_constraintStart_toEndOf="@+id/offer_group_min_offer"
        app:layout_constraintTop_toBottomOf="@+id/offer_group_admission"
        tools:text="List Tickets:" />

    <TextView
        android:id="@+id/offer_group_offer"
        style="@style/Text.Bold.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/offer_group_offer_title"
        app:layout_constraintEnd_toStartOf="@+id/offer_group_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/offer_group_offer_title"
        tools:text="100" />

    <TextView
        android:id="@+id/offer_group_min_offer_title"
        style="@style/Text.Medium.Medium.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/color_text_transactions"
        app:layout_constraintBottom_toTopOf="@+id/offer_group_demand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offer_group_admission"
        android:text="@string/transaction_details_min_offer" />

    <TextView
        android:id="@+id/offer_group_min_offer"
        style="@style/Text.Bold.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/offer_group_min_offer_title"
        app:layout_constraintStart_toEndOf="@+id/offer_group_min_offer_title"
        tools:text="$68  â€¢  " />

    <TextView
        android:id="@+id/offer_group_demand"
        style="@style/Text.Medium.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/offer_group_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="High Demand"
        tools:textColor="@color/color_on_sale_chance_poor"
        tools:visibility="visible" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/offer_group_picture"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/transparent"
        tools:src="@drawable/ic_arrow_right_accent_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/offer_group_price"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/offer_group_price"
        style="@style/Text.Bold.Title.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/offer_group_picture"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/offer_group_admission"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$60" />

</android.support.constraint.ConstraintLayout>