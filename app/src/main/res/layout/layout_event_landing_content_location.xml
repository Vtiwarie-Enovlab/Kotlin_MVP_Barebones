<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <fragment
        android:id="@+id/event_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        app:cameraZoom="16"
        app:mapType="normal"
        app:liteMode="true"/>

    <RelativeLayout
        android:id="@+id/container_event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:background="@color/color_white_alpha_80"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/event_location_name"
            style="@style/Text.Bold.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="HAMMERSTEIN BALLROOM"
            android:textAllCaps="true"
            android:textColor="@color/color_black_alpha_50"
            android:layout_toStartOf="@id/open_map"
            android:layout_marginEnd="@dimen/margin_small"/>

        <TextView
            android:id="@+id/event_address"
            style="@style/Text.Medium.Caption"
            android:textColor="?android:attr/colorPrimary"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="4 Pennsylvania Plaza\nNew York, NY 10001"
            android:layout_below="@id/event_location_name"
            android:layout_toStartOf="@id/open_map"
            android:layout_marginEnd="@dimen/margin_small"/>

        <Button
            android:id="@+id/open_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/event_landing_open_map"/>

    </RelativeLayout>
</FrameLayout>