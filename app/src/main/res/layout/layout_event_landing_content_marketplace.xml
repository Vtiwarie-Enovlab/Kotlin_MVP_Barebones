<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:clipToPadding="false"
    tools:background="?android:attr/colorPrimary">

    <TextView
        android:id="@+id/title_marketplace"
        style="@style/Text.Bold.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/color_white_alpha_50"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        tools:text="2 chances to get to the show"/>
    
    <LinearLayout
        android:id="@+id/container_event_marketplace_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/container_marketplace_info_list"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical"
            tools:visibility="visible">

            <TextView
                android:id="@+id/marketplace_info_list"
                style="@style/Text.Bold.Large.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_small"
                android:drawableStart="@drawable/ic_list_white_18dp"
                android:text="@string/event_landing_yoop_list_dot"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/marketplace_info_list_date"
                style="@style/Text.Regular.Medium.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2/10 - 2/25"/>

            <TextView
                android:id="@+id/marketplace_info_list_live"
                style="@style/Text.Bold.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:textColor="@color/color_marketplace_live"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="@string/event_landing_live" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_marketplace_info_on_sale"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="gone"
            android:gravity="center_vertical"
            tools:visibility="visible">

            <TextView
                android:id="@+id/marketplace_info_on_sale"
                style="@style/Text.Bold.Large.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_small"
                android:drawableStart="@drawable/ic_onsale_white_18dp"
                android:text="@string/event_landing_on_sale_dot"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/marketplace_info_on_sale_date"
                style="@style/Text.Regular.Medium.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2/26 - 2/28"/>

            <TextView
                android:id="@+id/marketplace_info_on_sale_live"
                style="@style/Text.Bold.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:textColor="@color/color_marketplace_live"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="@string/event_landing_live" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/event_assignments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/event_more_tickets"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rect_rounded_accent"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="20dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/event_more_tickets_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/ic_onsale_white_18dp"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Text.Bold.Large.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/event_landing_transaction_more_tickets"
            android:textAllCaps="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_white_28dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>