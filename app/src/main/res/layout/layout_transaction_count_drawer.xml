<LinearLayout android:id="@+id/transaction_count_drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="48dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/layout_dialog_separator" />

    <TextView
        style="@style/Text.Bold.Headline.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="48dp"
        android:text="@string/transaction_count_headline" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/count_picker_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:clipToPadding="false"
        android:paddingEnd="@dimen/padding_default"
        android:paddingStart="@dimen/padding_default" />

</LinearLayout>