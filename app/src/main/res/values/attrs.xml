<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputView">
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="android:hint" />
        <attr name="android:maxLength" />
        <attr name="android:digits" value=""/>
        <attr name="android:textSize" />
        <attr name="android:drawableEnd" />
        <attr format="boolean" name="editable" />
    </declare-styleable>

    <declare-styleable name="PasswordInputView">
        <attr format="boolean" name="validationFields" />
    </declare-styleable>

    <declare-styleable name="CardInputView">
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="android:hint" />
    </declare-styleable>

    <declare-styleable name="StatefulFloatingActionButton">
        <attr name="sfab_state" format="enum">
            <enum name="enabled" value="0"/>
            <enum name="disabled" value="1"/>
            <enum name="disabled_full" value="2"/>
            <enum name="loading" value="3"/>
            <enum name="success" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="StatefulButton">
        <attr name="android:text" />
        <attr name="android:textAllCaps" />
        <attr name="sb_state" format="enum">
            <enum name="enabled" value="0"/>
            <enum name="loading" value="1"/>
            <enum name="success" value="2"/>
            <enum name="disabled" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BluetoothView">
        <attr name="android:text" />
        <attr name="android:textAllCaps" />
        <attr name="state" format="enum">
            <enum name="off" value="0"/>
            <enum name="off_on_day" value="1"/>
            <enum name="off_ready" value="2"/>
            <enum name="on_ready" value="3"/>
            <enum name="on_contact_init" value="4"/>
            <enum name="on_checked_in" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="FilterStateButton">
        <attr format="reference" name="fsb_colorActivated" />
        <attr format="reference" name="fsb_colorDeactivated" />
    </declare-styleable>

    <declare-styleable name="EmptyCircleImageView">
        <attr format="reference" name="ec_circleRadius" />
        <attr format="reference" name="ec_maxCircleRadius" />
        <attr format="reference" name="ec_circlePadding" />
        <attr format="reference" name="ec_circleStart" />
        <attr format="boolean" name="ec_circleRadiusParent" />
        <attr format="reference" name="ec_borderWidth" />
        <attr format="reference" name="ec_borderColor" />
    </declare-styleable>
</resources>