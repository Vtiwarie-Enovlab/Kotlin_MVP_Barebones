<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingEnd">26dp</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/background_button_white</item>
        <item name="android:textColor">@color/color_grey_333333</item>
    </style>

    <style name="Button.White.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Accent">
        <item name="android:background">@drawable/background_button_accent</item>
    </style>

    <style name="Button.Dark">
        <item name="android:background">@drawable/background_button_primary</item>
    </style>

    <style name="Button.Accent.Small">
        <item name="android:layout_width">@dimen/button_size_small</item>
    </style>

    <style name="Button.Dark.Small">
        <item name="android:layout_width">@dimen/button_size_small</item>
    </style>

    <style name="Button.Removable">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/background_button_removable</item>
    </style>

    <style name="Button.State">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/background_button_state</item>
    </style>

    <style name="Button.State.Arrow">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">24dp</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/background_button_transparent</item>
    </style>

    <style name="Button.Accent.Transactions">
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Button.Accent.Transactions.Price">
        <item name="android:paddingEnd">4dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right_white_28dp</item>
        <item name="android:fontFamily">@null</item>
    </style>

    <style name="Button.Accent.Transactions.MyRequest">
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="Button.Accent.Transactions.MyRequest.MyOffer">
        <item name="android:fontFamily">@null</item>
    </style>

    <style name="Button.Filter">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/background_button_filter</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Button.CardManualInput">
        <item name="android:layout_height">44dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/background_button_removable</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>